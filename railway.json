{
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd backend && npm install && npm run build",
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "nixPkgs": [
                        "nodejs_20"
                    ]
                },
                "install": {
                    "cmds": [
                        "cd backend && npm install"
                    ]
                },
                "build": {
                    "cmds": [
                        "cd backend && npm run build"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "cd backend && npm start",
        "restartPolicyType": "ON_FAILURE"
    }
}